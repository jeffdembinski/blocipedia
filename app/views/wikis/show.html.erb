<div class="card w-100">
  <!-- <img class="card-img-top" src="/100px180/" alt="Card image cap"> -->
  <div class="card-body">
    <h2 class="card-title"><%= @wiki.title %></h2>
    <p class="card-text"><%= markdown(@wiki.body) %></p>
  </div>
</div>
<div class="container">
  <div class="row mt-3">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-pill btn-primary" %>
    <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-pill btn-danger' %>
  </div>
</div>
