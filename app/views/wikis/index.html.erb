<%= link_to "Create New Wiki", new_wiki_path, class: 'btn btn-success' %>

<div class="row">

  <% @wikis.each do |wiki| %>

  <div class="col-sm-6">
    <div class="card">
      <!-- <img class="card-img-top" src="/100px180/" alt="Card image cap"> -->
      <div class="card-body">
        <h5 class="card-title"><%= wiki.title %></h5>
        <p class="card-text"><%= wiki.body %></p>
        <%= link_to "Full Wiki", wiki, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <% end %>
